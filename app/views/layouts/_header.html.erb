<header>
  <div class="col-xs-3">
    <%= link_to root_path, :class => 'logo' do %>
      <div class="circle">
        <br />
        When You
        <br />
        need some
        <br />
        Stoic advice
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 hidden-xs slogan">
    Splurting out Stoic inspiration for positivity, mindfulness, and a successful life since 2015
  </div>
  <div class="col-xs-8 col-xs-offset-1 col-sm-offset-0 col-sm-5 links">
    <!-- Button trigger modal -->
    <%= link_to 'Contribute', '#', :data => {:toggle => 'modal', :target => '#myModal'} %>
    &nbsp;&nbsp;
    <%= link_to 'About', about_path %>
  </div>
</header>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
       <h4 class="modal-title" id="myModalLabel">Contribute Your Quote</h4>
     </div>
     <%= simple_form_for Quote.new do |f| %>
       <div class="modal-body">
         <%= f.input :saying, :label => "What is the saying you want to add?", :placeholder => "The obstacle is the way." %>
         <br />
         <%= f.input :author, :label => "Who is the author of the quote?", :placeholder => "Ryan Holiday" %>
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         <%= f.submit 'Add Quote', :class => 'btn btn-danger' %>
       </div>
     <% end %>
   </div>
 </div>
</div>

<hr />
<br class="clear" />
